$("#row_<%= dom_id(@operation) %>")
    .animate(
        {opacity: 'hide', height: 'hide'},
        {complete: () => { 
            $("#row_<%= dom_id(@operation) %>")
                .replaceWithPush($("<%= escape_javascript(render @operation) %>").hide())
                .animate({opacity: 'show', height: 'show'});
        }}
    );
